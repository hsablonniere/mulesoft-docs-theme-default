<div class="navigation__wrapper"  data-domain="{{domain.name}}" data-version="{{domain.version.string}}" data-is-global-aspect-nav="{{isGlobalAspectNav}}">
  <nav role="navigation" class="navigation">
    <div class="navigation-toolbar">
      <button data-panel="aspect">Tasks</button>
      <button data-panel="explore">Explore</button>
      {{#if (not isGlobalAspectNav)}}
        <button data-panel="domain">Product</button>
      {{/if}}
      <button class="navigation-close"></button>
    </div>
    <div class="navigation-panels">
      {{> navigation-aspect }}
      {{> navigation-explore }}
      {{#if (not isGlobalAspectNav)}}
        {{> navigation-domain }}
      {{/if}}
    </div>
  </nav>
</div>
