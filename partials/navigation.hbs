{{#if navigation.length }}
  <ul class="nav-lst">
    {{#each navigation }}
      <li class="nav-itm{{#if this.currentPath}} nav-itm--currentPath{{/if}}{{#if this.currentPage}} nav-itm--currentPage{{/if}}" data-depth="{{this.depth}}"{{#if this.currentPath}} data-state="expanded"{{/if}}>
        {{#if this.depth }}
          {{#if this.items.length }}
            <button class="nav-tgl"></button>
          {{/if}}
        {{/if}}
        <a class="nav-lnk" href="{{this.href}}">{{{this.label}}}</a>
        {{> navigation navigation=this.items }}
      </li>
    {{/each}}
  </ul>
{{/if}}
